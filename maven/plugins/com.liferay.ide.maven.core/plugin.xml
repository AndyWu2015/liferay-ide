<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.m2e.core.lifecycleMappingMetadataSource">
   </extension>

   <extension
         point="org.eclipse.m2e.core.projectConfigurators">
      <configurator
            class="com.liferay.ide.maven.core.LiferayProjectConfigurator"
            id="com.liferay.ide.maven.core.project.configurator"
            name="Liferay Project Configurator"
            secondaryTo="org.maven.ide.eclipse.configuration.wtp.configurator">
      </configurator>
      <configurator
            class="com.liferay.ide.maven.core.LiferayProjectLifecycleConfigurator"
            id="com.liferay.ide.maven.core.lifecycle.configurator"
            name="Liferay Project Lifecycle Configurator">
      </configurator>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IProject"
            class="com.liferay.ide.maven.core.LiferayMavenProjectFactory">
         <adapter
               type="com.liferay.ide.core.ILiferayProject">
         </adapter>
      </factory>
   </extension>

</plugin>
