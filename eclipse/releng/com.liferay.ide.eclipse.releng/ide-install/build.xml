<project default="run">
	<target name="run">
		<exec executable="${basedir}/builder/eclipsec.exe">
			<arg value="-application"/>
			<arg value="org.eclipse.equinox.p2.director"/>
			<arg value="-repository"/>
			<arg value="http://releases.liferay.com/tools/ide/eclipse/galileo/nightly/"/>
			<arg value="-installIU"/>
			<arg value="com.liferay.ide.eclipse.tools.feature.group"/>
			<arg value="-destination"/>
			<arg value="${basedir}/eclipse/"/>
			<arg value="-profile"/>
			<arg value="epp.package.jee"/>
			<arg value="-profileProperties"/>
			<arg value="org.eclipse.update.install.features=true"/>
			<arg value="-bundlepool"/>
			<arg value="${basedir}/eclipse/"/>
			<arg value="-p2.os"/>
			<arg value="win32"/>
			<arg value="-p2.ws"/>
			<arg value="win32"/>
			<arg value="-p2.arch"/>
			<arg value="x86"/>
			<arg value="-roaming"/>
		</exec>	
	</target>
</project>
