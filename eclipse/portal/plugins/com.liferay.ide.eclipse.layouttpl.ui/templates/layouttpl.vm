<div class="$templateName" id="main-content" role="main">
#foreach( $row in $root.getRows() )		
#if ( $row.getColumns().size() == 1)		
		#set( $columnOnly = $row.getColumns().get(0) )
		<div class="portlet-layout">
			<div class="portlet-column portlet-column-only" id="column-$columnOnly.numId">
				_#_processor.processColumn("column-$columnOnly.numId", "portlet-column-content portlet-column-content-only")
			</div>
		</div>
#elseif ( $row.getColumns().size() > 1) 
		<div class="portlet-layout">
#foreach ( $col in $row.getColumns() )		
#if ( $col.isFirst() )
			<div class="aui-w$col.getWeight() portlet-column portlet-column-first" id="column-$col.numId">
				_#_processor.processColumn("column-$col.numId", "portlet-column-content portlet-column-content-first")
#elseif ( $col.isLast() )
			<div class="aui-w$col.getWeight() portlet-column portlet-column-last" id="column-$col.numId">
				_#_processor.processColumn("column-$col.numId", "portlet-column-content portlet-column-content-last")
#else
			<div class="aui-w$col.getWeight() portlet-column" id="column-$col.numId">
				_#_processor.processColumn("column-$col.numId", "portlet-column-content")
#end			
			</div>
#end			
		</div>
#end
#end
</div>