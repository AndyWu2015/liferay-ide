<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.liferay.ide.eclipse.ui.pref.LiferayUIPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.liferay.ide.eclipse.ui.pref.LiferayUIPreferencePage"
            id="com.liferay.ide.eclipse.ui.preferences.liferay"
            name="Liferay">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
         <objectContribution objectClass="org.eclipse.core.resources.IProject" adaptable="true" id="com.liferay.ide.eclipse.ui.popupmenu">
	         <menu label="Liferay"  id="liferayPopupMenuCategory">
	            <separator name="slot1"/> 
	         </menu>
      	</objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="com.liferay.ide.eclipse.ui.keyword"
            label="Liferay">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.liferay.ide.eclipse.ui.LiferayPerspectiveFactory"
            icon="icons/e16/liferay.png"
            id="com.liferay.ide.eclipse.ui.perspective.liferay"
            name="Liferay">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jst.j2ee.J2EEPerspective">
         <actionSet
               id="com.liferay.ide.eclipse.ui.shortcuts.actionSet">
         </actionSet>
         <perspectiveShortcut
               id="com.liferay.ide.eclipse.ui.perspective.liferay">
         </perspectiveShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.project.ui.newProjectWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.portlet.ui.wizard.portlet">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.portlet.ui.wizard.hook">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.portlet.ui.wizard.servicebuilder">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
            <actionSet
               id="com.liferay.ide.eclipse.ui.shortcuts.actionSet">
         </actionSet>
         <perspectiveShortcut
               id="com.liferay.ide.eclipse.ui.perspective.liferay">
         </perspectiveShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.project.ui.newProjectWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.portlet.ui.wizard.portlet">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.portlet.ui.wizard.hook">
         </newWizardShortcut>
         <newWizardShortcut
               id="com.liferay.ide.eclipse.portlet.ui.wizard.servicebuilder">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.liferay.ide.eclipse.ui.shortcuts.actionSet"
            label="Liferay Actions">
         <action
               class="com.liferay.ide.eclipse.ui.action.NewPortletDropDownAction"
               icon="icons/n16/portlet_new.png"
               id="com.liferay.ide.eclipse.ui.action.newPortlet"
               label="New Liferay Portlet"
               style="pulldown"
               toolbarPath="Normal/Liferay"
               tooltip="Create a new Liferay Portlet">
         </action>
         <action
               class="com.liferay.ide.eclipse.ui.action.NewPluginProjectDropDownAction"
               icon="icons/n16/plugin_new.png"
               id="com.liferay.ide.eclipse.ui.action.newPluginProject"
               label="New Liferay Plug-in Project"
               style="pulldown"
               toolbarPath="Normal/Liferay"
               tooltip="Create a new Liferay Plug-in Project">
         </action>
      </actionSet>
   </extension>

</plugin>
